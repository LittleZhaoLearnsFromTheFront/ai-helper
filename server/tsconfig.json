{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ES2022",
    "outDir": "../dist",
    "noEmit": true,
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true
  },
  "extensions": [
    "**/*.ts"
  ],
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node",
    "transpileOnly": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}